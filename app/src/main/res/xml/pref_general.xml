<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_list_colors"
        android:entryValues="@array/pref_list_color_values"
        android:key="color_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_change_colors" />

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_list_sort_order"
        android:entryValues="@array/pref_list_sort_values"
        android:key="sort_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_change_sort_oder" />

</PreferenceScreen>
